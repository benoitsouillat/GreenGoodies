<div class="product-card">
    <a href="{{ path('app_product_details', {id : product.id }) }}">
        <div class="image-container">
            {% if product.picture starts with 'http' %}
                <img src="{{ product.picture }}" alt="{{ product.name }}">
            {% else %}
                <img src="{{  asset('images/' ~ product.picture) | imagine_filter('product_list') }}" alt="{{ product.name }}">
            {% endif %}
        </div>
    </a>
    <a href="{{ path('app_product_details', {id : product.id }) }}">
        <h3>{{ product.name }}</h3>
    </a>
    <p>{{ product.shortDescription }}</p>
    <p class="price">{{ product.price|number_format(2, ',', ' ') }} â‚¬</p>
    <a href="{{ path('app_product_details', {id : product.id }) }}" class="link-cta">Voir le produit</a>
</div>
